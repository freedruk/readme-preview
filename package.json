{
  "name": "readme-preview",
  "version": "1.0.4",
  "description": "Preview and validate how your README renders on npm and GitHub before publishing.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "readme-preview": "bin/readme-preview.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "readme",
    "preview",
    "markdown",
    "npm",
    "github",
    "lint",
    "documentation",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freedruk/readme-preview.git"
  },
  "bugs": {
    "url": "https://github.com/freedruk/readme-preview/issues"
  },
  "homepage": "https://github.com/freedruk/readme-preview#readme",
  "scripts": {
    "ts:build": "esbuild bin/readme-preview.ts src/**/*.ts --outdir=. --minify --sourcemap=external",
    "dev": "node ./bin/readme-preview.js",
    "preview": "node ./bin/readme-preview.js",
    "check": "node ./bin/readme-preview.js check",
    "check:strict": "node ./bin/readme-preview.js check --strict",
    "build": "node ./bin/readme-preview.js build",
    "init": "node ./bin/readme-preview.js init",
    "test": "node --import tsx --test \"test/**/*.test.ts\"",
    "prepack": "node -e \"console.log('packing readme-previewâ€¦')\""
  },
  "files": [
    "bin/readme-preview.js",
    "src/check.js",
    "src/init.js",
    "src/render.js",
    "src/server.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "marked": "^13.0.0",
    "open": "^10.1.0",
    "sanitize-html": "^2.13.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/sanitize-html": "^2.16.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
